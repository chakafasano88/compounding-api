enum Permission { 
  ADMIN
  USER
}

enum PostTypes {
  THINKING
  BUSINESS
  SCIENCE
  INVESTING
}

type Post {
  id: ID! @id @unique
  createdAt: DateTime! @createdAt
  description: String!
  url: String
  title: String!
  postedBy: User
  votes: [Vote!]!
  comments: [Comment!]!
  types: [PostTypes!]! @scalarList(strategy: RELATION)
}

type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION) 
  posts: [Post!]!
  votes: [Vote!]
}

type Vote {
  id: ID! @id
  post: Post! @unique
  user: User! @unique
  createdAt: DateTime! @createdAt
}

type Comment {
  id: ID! @id
  description: String!
  post: Post! @unique
  user: User! @unique
}

